# Q-DRAGON Production Environment Configuration
# Copy this file to .env.local on your CentOS server

# MongoDB Configuration
MONGODB_URI="mongodb://localhost:27017/qdragon_production"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="your-super-secure-production-jwt-key-change-this-now"

# Email Configuration
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Admin Configuration (CHANGE THIS IN PRODUCTION!)
ADMIN_KEY="your-secure-admin-key-2025"

# Production Settings
NODE_ENV="production"
PORT=3000

# Optional: If using external MongoDB
# MONGODB_URI="mongodb://username:password@mongodb-server:27017/qdragon_production"